<!-- to connecting the layout -->
<%layout('layouts/boilerplate')%>
<h1>Edit Campground</h1>
<form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
  <!--give an method override to overwrite the value -->
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="campground[title]"
      value="<%=camp.title%>"
    />
    <!-- give the actual value to form -->
  </div>
  <div>
    <label for="location">Location</label>
    <input
      type="text"
      id="location"
      name="campground[location]"
      value="<%=camp.location%>"
    />
  </div>
  <button>Update form</button>
</form>
<a href="/campgrounds/<%=camp._id%>">Back to campground</a>
