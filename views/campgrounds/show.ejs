<!-- to connecting the layout -->
<%layout('layouts/boilerplate')%>
    <h1>Show details</h1>
    <ul>
      <li>The title: <%=camp.title %></li>
      <li>The location: <%=camp.location %></li>
    </ul>
    <img src="<%=camp.image%>" alt="">
    <p><%=camp.description%></p>
    <a href="/campgrounds/<%=camp._id%>/edit">Edit Campground</a>
    <a href="/campgrounds">Back to All list</a>
    <p>
      <form action="/campgrounds/<%=camp._id%>?_method=DELETE" method="POST">
      <button>DELETE</button>
      </form>
    </p>
